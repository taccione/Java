import java.util.Scanner;
public class BinarioDecimale{
    public static void main(String[] args) {
        Scanner tastiera = new Scanner(System.in);
    //Dichiarazione delle variabili
        int numero;
        int cifra=0;
        int controlloCifre;
        int resto=0;
        int binario;
        int decimale;

        System.out.println("Inserisci un numero binario con 8 cifre: ");
        numero=tastiera.nextInt();

        while(numero>0){
            numero=numero/10;
            cifra=cifra+1;
        }
        if(cifra!=8){
            System.out.println("Inserisci un numero valido! Non Ã¨ un byte!");
        }
        while(numero>0) {
            resto = numero % 10;
            numero = numero / 10;
            if (resto != 0 || resto != 1) {
                System.out.println("Inserisci un numero valido!");
            }
        }
        
    }
}
